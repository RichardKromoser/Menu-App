<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_ingredient_fruit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ingredient_fruit"
        android:textSize="@dimen/ingredient_header_text"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <com.menu.richard.menuapp.ExpandableHeightGridView
        android:id="@+id/grid_view_ingredient_fruit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="20dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        android:isScrollContainer="false"/>

    <TextView
        android:id="@+id/text_view_ingredient_vegetable"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ingredient_header"
        android:text="@string/ingredient_vegetable"
        android:textSize="@dimen/ingredient_header_text"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <com.menu.richard.menuapp.ExpandableHeightGridView
        android:id="@+id/grid_view_ingredient_vegetable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="20dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        android:isScrollContainer="false"/>

    <TextView
        android:id="@+id/text_view_ingredient_protein"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ingredient_header"
        android:text="@string/ingredient_protein"
        android:textSize="@dimen/ingredient_header_text"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <com.menu.richard.menuapp.ExpandableHeightGridView
        android:id="@+id/grid_view_ingredient_protein"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="20dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        android:isScrollContainer="false"/>

    <TextView
        android:id="@+id/text_view_ingredient_pantry"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ingredient_header"
        android:text="@string/ingredient_pantry"
        android:textSize="@dimen/ingredient_header_text"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <com.menu.richard.menuapp.ExpandableHeightGridView
        android:id="@+id/grid_view_ingredient_pantry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="20dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        android:isScrollContainer="false"/>

    <TextView
        android:id="@+id/text_view_ingredient_spice"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ingredient_header"
        android:text="@string/ingredient_spice"
        android:textSize="@dimen/ingredient_header_text"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <com.menu.richard.menuapp.ExpandableHeightGridView
        android:id="@+id/grid_view_ingredient_spice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="90dp"
        android:gravity="center"
        android:horizontalSpacing="20dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp"
        android:isScrollContainer="false"/>

</LinearLayout>
</ScrollView>